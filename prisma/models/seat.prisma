model Seat {
  id        String   @id @default(cuid())
  tableId   String
  seatIndex Int      // 1..capacity
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  table Table @relation(fields: [tableId], references: [id], onDelete: Cascade)

  @@unique([tableId, seatIndex])
  @@index([tableId])
  @@map("seats")
}
